<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:background="@drawable/background_operator2"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/score_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Score: 0"
        android:fontFamily="@font/architects_daughter"
        android:textStyle="bold"
        android:textColor="@color/Blue"
        android:textSize="44sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_title"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="20 + 20"
            android:textColor="@color/white"
            android:textSize="48sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="= ?"
            android:textColor="@color/Red"
            android:textSize="48sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/architects_daughter"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Your Answer is..."
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="38sp" />

    <GridLayout
        android:id="@+id/answer_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/answer1_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_border_edit_magenta"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/answer2_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginRight="20dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_border_edit_teal"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/answer3_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_border_edit_green"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/answer4_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_border_edit_brown"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="30"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/answer5_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_border_edit_red"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/answer6_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_border_edit_blue"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="42sp" />

    </GridLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:indeterminate="false"
        android:max="10"
        android:progress="1"
        />

</LinearLayout>