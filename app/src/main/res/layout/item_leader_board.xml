<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leader_board_item"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/top1_player_border"
    android:orientation="vertical"
    android:padding="8dp">

    <!--User name-->
    <TextView
        android:id="@+id/top_index_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/finger_paint"
        android:paddingRight="8dp"
        android:text="TOP 1"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/finger_paint"
        android:paddingRight="8dp"
        android:text="The Rolling Peanut"
        android:textColor="@color/Green"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="-10dp"
        android:paddingRight="8dp"
        android:text="________________________________"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="-10dp"
        />

    <!--Game played and score-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/finger_paint"
                android:text="Game Played"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/play_number_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/finger_paint"
                android:text="10"
                android:textColor="@color/Brown"
                android:textSize="18sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/finger_paint"
                android:text="Score"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/average_score_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/finger_paint"
                android:text="100"
                android:textColor="@color/Magenta"
                android:textSize="18sp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>